    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <security-role>
        <role-name>role51</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Index jsp</web-resource-name>
            <url-pattern>/index.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>role51</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Servlet Sss</web-resource-name>
            <url-pattern>/Sss</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>role51</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>